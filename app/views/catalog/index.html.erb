<% provide(:title, 'Welcome') %>

<div class="container-fluid">
  <div class="col-md-8">
    <ol class="products">
      <% cache @products do %>
              <% @products.each do |product| %>
              <% cache product do %>

                  <li>
                    <span class="name"><%= product.name %></span>
                    <p style="margin-left: 5%;font-size: 0.8em;color: darkgray;">(Description)</p>
                    <span class="content"><%= product.description %></span>
                    <p style="margin-left: 5%;font-size: 0.8em;color: mediumblue;">(Price)</p>
                    <span class="content"><%= number_to_currency(product.price)%></span>
                  </li>

              <% end %>
          <% end %>
      <% end %>
    </ol>
  </div>
</div>